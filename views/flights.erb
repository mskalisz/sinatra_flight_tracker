<% if session[:success] %> 
  <div class="flash success">
    <p><%= session.delete(:success) %></p>
  </div>
<% end %>

<ul id="flights">
  <% @flights.each do |flight| %>
    <li>
      <a>
        <h2><%= "#{flight[:name]}: #{flight[:destination]}"%></h2> 
        <p><%= flight[:date]%></p>
      </a>
    </li>
  <% end %>
</ul>

<a href="/flights/new">New Flight</a>